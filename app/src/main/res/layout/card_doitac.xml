<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="303dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="6dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="8dp"
    android:layout_marginRight="-12dp"
    android:layout_marginTop="-5dp"
    android:id="@+id/cardViewDoitac"
    >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rellativeCardDoitac"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/imagedoitac"
            android:scaleType="centerCrop"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="78dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="9dp"
            android:id="@+id/nameDoitac"
            android:text="Tên đối tác"
            android:textStyle="bold"
            android:textColor="#042f66"
            android:textSize="21dp"
            android:fontFamily="sans-serif-condensed"
            android:layout_below="@+id/imagedoitac"
            ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tendanhmuc"
            android:text="Danh muc"
            android:textStyle=""
            android:textColor="@color/black"
            android:textSize="18dp"
            android:layout_marginLeft="9dp"
            android:fontFamily="sans-serif-condensed"
            android:layout_below="@+id/nameDoitac"
            ></TextView>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_location"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tendanhmuc"
            android:id="@+id/imageLocation"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="3dp"

            ></ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/location"
            android:text="1Kg"
            android:textStyle=""
            android:textColor="@color/black"
            android:textSize="16dp"
            android:layout_marginTop="1dp"
            android:fontFamily="sans-serif-condensed"
            android:layout_below="@+id/tendanhmuc"
            android:layout_toRightOf="@+id/imageLocation"
            ></TextView>
    </RelativeLayout>
</androidx.cardview.widget.CardView>