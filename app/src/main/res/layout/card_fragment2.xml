<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="3dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="3dp"
    android:layout_marginRight="0dp"
    android:layout_marginTop="0dp"
    android:id="@+id/cardViewPayment"
    >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rellativeCardRoom"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/imageRoom"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:paddingLeft="9dp"
            android:paddingRight="9dp"
            app:cardCornerRadius="1dp"
            app:cardElevation="1dp"
            app:cardUseCompatPadding="true">

            <com.denzcoskun.imageslider.ImageSlider
                android:id="@+id/image_slider"
                android:layout_width="match_parent"
                android:layout_height="135dp"
                app:iss_auto_cycle="true"
                app:iss_delay="0"
                app:iss_period="1000"
                tools:ignore="MissingClass" />
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tenphong"
            android:text="ten phòng"
            android:textStyle="bold"
            android:textColor="#042f66"
            android:textSize="21dp"
            android:fontFamily="sans-serif-condensed"
            android:layout_toRightOf="@+id/imageRoom"
            android:layout_marginLeft="5dp"
            ></TextView>
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_baseline_date_range_24"
            android:id="@+id/imagepeople"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/imageRoom"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"

            ></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày đến"
            android:textColor="#042f66"
            android:textSize="19dp"
            android:fontFamily="sans-serif-condensed"
            android:layout_toRightOf="@+id/imagepeople"
            android:layout_below="@+id/imageRoom"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:id="@+id/text_people"
            ></TextView>

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_baseline_date_range_24"
            android:id="@+id/imagewifi"
            android:layout_marginTop="6dp"
            android:layout_below="@+id/text_people"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            ></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày đi"
            android:textColor="#042f66"
            android:textSize="19dp"
            android:fontFamily="sans-serif-condensed"
            android:layout_toRightOf="@+id/imagepeople"
            android:layout_below="@+id/text_people"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="1dp"
            android:id="@+id/text_wifi"
            ></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã đơn:"
            android:textColor="#000000"
            android:textSize="18dp"
            android:fontFamily="sans-serif-condensed"
            android:layout_toRightOf="@+id/imageRoom"
            android:layout_below="@+id/tenphong"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:id="@+id/note"
            ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã đơn đặt phòng"
            android:textColor="#000000"
            android:textSize="18dp"
            android:fontFamily="sans-serif-condensed"
            android:layout_toRightOf="@+id/note"
            android:layout_below="@+id/tenphong"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:id="@+id/iddonhang"
            ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số lượng:"
            android:textColor="#000000"
            android:textSize="18dp"
            android:fontFamily="sans-serif-condensed"
            android:layout_toRightOf="@+id/imageRoom"
            android:layout_below="@+id/iddonhang"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:id="@+id/textSL"
            ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 0"
            android:textColor="#000000"
            android:textSize="18dp"
            android:fontFamily="sans-serif-condensed"
            android:layout_toRightOf="@+id/note"
            android:layout_below="@+id/iddonhang"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="3dp"
            android:id="@+id/soluong"
            ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giá:"
            android:textColor="#000000"
            android:textSize="18dp"
            android:fontFamily="sans-serif-condensed"
            android:layout_toRightOf="@+id/imageRoom"
            android:layout_below="@+id/soluong"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:id="@+id/textgia"
            ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 0"
            android:textColor="#000000"
            android:textSize="18dp"
            android:fontFamily="sans-serif-condensed"
            android:layout_toRightOf="@+id/note"
            android:layout_below="@+id/soluong"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="3dp"
            android:id="@+id/price"
            ></TextView>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imageRoom"
            android:layout_below="@+id/price"
            android:layout_marginTop="10dp"
            android:layout_marginRight="12dp"
            android:id="@+id/relagia"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng tiền:"
                android:textColor="#042f66"
                android:textSize="20dp"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:id="@+id/text_gia"
                ></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11111111"
                android:textColor="#042f66"
                android:textSize="20dp"
                android:fontFamily="sans-serif-condensed"
                android:layout_toRightOf="@+id/text_gia"

                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:id="@+id/text_price"
                ></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="đ"
                android:textColor="#042f66"
                android:textSize="20dp"
                android:fontFamily="sans-serif-condensed"
                android:layout_toRightOf="@+id/text_price"

                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:id="@+id/text_vnd"
                ></TextView>
        </RelativeLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>