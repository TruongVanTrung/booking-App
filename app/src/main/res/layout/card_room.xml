<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="3dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="3dp"
    android:layout_marginRight="0dp"
    android:layout_marginTop="0dp"
    android:id="@+id/cardViewRoom"
    >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rellativeCardRoom"
        >
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_baseline"
            android:layout_alignParentLeft="true"
            android:id="@+id/imageRoom"
            android:layout_marginTop="-18dp"
            android:layout_marginLeft="3dp"
            ></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tenphong"
            android:text="ten phòng"
            android:textStyle="bold"
            android:textColor="#042f66"
            android:textSize="21dp"
            android:fontFamily="sans-serif-condensed"
            android:layout_toRightOf="@+id/imageRoom"
            android:layout_marginLeft="5dp"
            ></TextView>
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_people"
            android:id="@+id/imagepeople"
            android:layout_marginTop="-12dp"
            android:layout_below="@+id/imageRoom"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"

            ></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="số người"
            android:textColor="#042f66"
            android:textSize="19dp"
            android:fontFamily="sans-serif-condensed"
            android:layout_toRightOf="@+id/imagepeople"
            android:layout_below="@+id/imageRoom"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="-17dp"
            android:id="@+id/text_people"
            ></TextView>
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_baseline_bed_24"
            android:id="@+id/imagegiuong"
            android:layout_marginTop="-12dp"
            android:layout_below="@+id/imageRoom"
            android:layout_toRightOf="@+id/text_people"
            android:layout_marginLeft="9dp"
            ></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="số giuong"
            android:textColor="#042f66"
            android:textSize="19dp"
            android:fontFamily="sans-serif-condensed"
            android:layout_toRightOf="@+id/imagegiuong"
            android:layout_below="@+id/imageRoom"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="-17dp"
            android:id="@+id/text_giuong"
            ></TextView>
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_wifi"
            android:id="@+id/imagewifi"
            android:layout_marginTop="6dp"
            android:layout_below="@+id/text_people"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            ></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wifi Free"
            android:textColor="#042f66"
            android:textSize="19dp"
            android:fontFamily="sans-serif-condensed"
            android:layout_toRightOf="@+id/imagepeople"
            android:layout_below="@+id/text_people"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="1dp"
            android:id="@+id/text_wifi"
            ></TextView>
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_bus"
            android:id="@+id/imagebus"
            android:layout_marginTop="6dp"
            android:layout_below="@+id/text_wifi"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            ></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xe đưa đón miễn phí"
            android:textColor="#042f66"
            android:textSize="19dp"
            android:fontFamily="sans-serif-condensed"
            android:layout_toRightOf="@+id/imagepeople"
            android:layout_below="@+id/text_wifi"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="1dp"
            android:id="@+id/text_bus"
            ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ghi chú:"
            android:textColor="#000000"
            android:textSize="18dp"
            android:fontFamily="sans-serif-condensed"
            android:layout_toRightOf="@+id/imageRoom"
            android:layout_below="@+id/tenphong"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:id="@+id/note"
            ></TextView>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/imageRoom"
            android:layout_marginTop="-20dp"
            android:layout_marginRight="12dp"
            android:id="@+id/relagia"

            >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giá:"
                    android:textColor="#042f66"
                    android:textSize="20dp"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="3dp"
                    android:id="@+id/text_gia"
                    ></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11111111"
                    android:textColor="#042f66"
                    android:textSize="20dp"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_toRightOf="@+id/text_gia"

                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="3dp"
                    android:id="@+id/text_price"
                    ></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="đ"
                    android:textColor="#042f66"
                    android:textSize="20dp"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_toRightOf="@+id/text_price"

                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="3dp"
                    android:id="@+id/text_vnd"
                    ></TextView>
        </RelativeLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/xanh_dam"
            android:text="Đặt phòng"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/relagia"
            android:layout_marginRight="12dp"
            android:id="@+id/submit"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="6dp"
            />
    </RelativeLayout>
</androidx.cardview.widget.CardView>